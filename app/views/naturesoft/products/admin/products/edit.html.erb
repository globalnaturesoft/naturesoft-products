<% title t(:edit_product) + ": " + @product.name %>

<!-- Horizontal form options -->
<div class="row">
    <div class="col-md-12">

        <!-- Basic layout-->
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title"><%= t(:edit_product) %></h5>
            </div>
            
            <div class="panel-body">
                <%= render 'form', product: @product %>
            </div>

        </div>
        <!-- /basic layout -->
    </div>
</div>
<!-- /horizontal form options -->