<%= form_for([naturesoft_products, :admin, product], html: {class: "form-horizontal validate", multipart: true}) do |f| %>
    
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:name) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :name, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:code) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :code, class: "form-control required" %>
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:new_price) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :new_price, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:quantity) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :quantity, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:unit) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :unit, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:discount) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :discount, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:old_price) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :old_price, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
      <label class="col-md-2 control-label" ><%= t(:manufacturer) %> <span class='text-danger'>*</span></label>
      <div class="col-md-10">
        <%= f.collection_select(:manufacturer_id, Naturesoft::Products::Manufacturer.all, :id, :name, {:prompt=> "Choose manufacturer..."}, {class: "select2"}) %>
      </div>
    </div>
      
    <div class="form-group field">
        <label class="col-md-2 control-label" ><%= t(:category) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <select name="category_ids[]" id="category_ids" class="multi-select2-article-categories" data-placeholder="<%= t(:placeholder_categories) %>..." multiple="multiple">
                <% Naturesoft::Products::Category.all.each do |item| %>
                    <option <%= "selected" if product.categories.include?(item) %> value="<%= item.id %>"><%= item.parent.first.name + " - " if item.parent.present? %> <%= item.name %></option>
                <% end %>
            </select>
        </div>
    </div>
      
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:description) %> <!--<span class='text-danger'>*</span>--></label>
        <div class="col-md-10">
            <%= f.text_area :short_description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
    </div>
    
<% end %>