<%= form_for([naturesoft_products, :admin, product], html: {class: "form-horizontal validate", multipart: true}) do |f| %>
    
     <div class="tabbable tab-content-bordered">
        <ul class="nav nav-tabs bg-primary">
            <li class="active"><a href="#control-tab1" data-toggle="tab"><%= t(:infomations) %></a></li>
            <li><a href="#description-tab" data-toggle="tab"><%= t(:description) %> </a></li>
            <li><a href="#control-tab2" data-toggle="tab"><%= t(:images) %> </a></li>
            <li><a href="#control-tab3" data-toggle="tab"><%= t(:discount) %> </a></li>
            <li><a href="#control-tab4" data-toggle="tab"><%= t(:property) %> </a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane has-padding active" id="control-tab1">
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:name) %> <span class='text-danger'>*</span></label>
                    <div class="col-md-10">
                        <%= f.text_field :name, class: "form-control required" %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:code) %> <span class='text-danger'>*</span></label>
                    <div class="col-md-10">
                        <%= f.text_field :code, class: "form-control required" %>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:price) %> <span class='text-danger'>*</span></label>
                    <div class="col-md-10">
                        <%= f.text_field :new_price, class: "form-control number_input required" %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:quantity) %> <span class='text-danger'>*</span></label>
                    <div class="col-md-10">
                        <%= f.text_field :quantity, class: "form-control number_input required" %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:unit) %> <span class='text-danger'>*</span></label>
                    <div class="col-md-10">
                        <%= f.text_field :unit, class: "form-control required" %>
                    </div>
                </div>
                    
                <div class="form-group">
                  <label class="col-md-2 control-label" ><%= t(:manufacturer) %> <span class='text-danger'>*</span></label>
                  <div class="col-md-10">
                    <div class="input-group">
                        <!--<%= f.collection_select(:manufacturer_id, Naturesoft::Products::Manufacturer.all, :id, :name, {:prompt=> "Choose manufacturer..."}, {class: "select2 required"}) %>-->
                        
                        <% selected = options_for_select([[product.manufacturer.name, product.manufacturer_id]], product.manufacturer_id) if product.manufacturer.present? %>
                        <%= select_tag("product[manufacturer_id]",
                          selected,
                          {
                            class: "select2-ajax required",
                            include_blank: "none",
                            "data-url": select2_admin_manufacturers_path,
                          }
                        ) %>
                        <span class="input-group-btn">
                          <a class="btn btn-info" href="<%= naturesoft_products.new_admin_manufacturer_path %>"><i class="icon-plus2"></i></a>
                        </span>
                    </div>
                  </div>
                </div>
                  
                <div class="form-group field">
                    <label class="col-md-2 control-label" ><%= t(:category) %> <span class='text-danger'>*</span></label>
                    <div class="col-md-10">
                      <div class="input-group">
                          <!--<select name="category_ids[]" id="category_ids" class="multi-select2-categories" data-placeholder="<%= t(:placeholder_categories) %>..." multiple="multiple">
                              <% Naturesoft::Products::Category.all.each do |item| %>
                                  <option <%= "selected" if product.categories.include?(item) %> value="<%= item.id %>"><%= item.full_name %></option>
                              <% end %>
                          </select>-->
                          <% selected = options_for_select((product.categories.map {|c| [c.name, c.id]}),product.categories.map(&:id)) %>
                          <%= select_tag("category_ids[]",
                            selected,
                            {
                              class: "select2-ajax required",
                              include_blank: "none",
                              multiple: "multiple",
                              "data-url": select2_admin_categories_path,
                            }
                          ) %>
                          <span class="input-group-btn">
                            <a class="btn btn-info" href="<%= naturesoft_products.new_admin_category_path %>"><i class="icon-plus2"></i></a>
                          </span>
                      </div>
                    </div>
                </div>
                    
                <div class="form-group field">
                    <label class="col-md-2 control-label" ><%= t(:label) %> </label>
                    <div class="col-md-10">
                        <select name="label_ids[]" id="label_ids" class="multi-select2-labels" data-placeholder="<%= t(:placeholder_labels) %>..." multiple="multiple">
                            <% Naturesoft::Products::Label.all.each do |item| %>
                                <option <%= "selected" if product.labels.include?(item) %> value="<%= item.id %>"><%= item.name %></option>
                            <% end %>
                        </select>
                    </div>
                </div>
                  
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:description) %> <!--<span class='text-danger'>*</span>--></label>
                    <div class="col-md-10">
                        <%= f.text_area :short_description, rows: "5", cols: "5", class: "form-control" %>
                    </div>
                </div>

            </div>

            <div class="tab-pane has-padding" id="description-tab">
              <div class="form-group">
                <div class="col-md-12">
                  <%= f.text_area :description, rows: "4", cols: "4", class: "editor" %>
                </div>
              </div>
            </div>
                 
            <div class="tab-pane has-padding addable-form" data-sample="image-form" id="control-tab2">
              <div class="addable-container">
                <% product.images.each_with_index do |image,index| %>
                  <%= render "image_form", item: image, index: index %>
                <% end %>
              </div>
              <div class="row">
                <div class="col-md-2">
                  <div class="text-left">
                    <a href="#add" class="btn btn-info addable-add"><%= t(:add_image) %> <i class="icon-plus2 position-center"></i></a>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="tab-pane has-padding" id="control-tab3">
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:discount) %> </label>
                    <div class="col-md-10">
                        <%= f.text_field :discount, class: "form-control number_input" %>
                    </div>
                </div>
                    
                <div class="form-group">
                    <label class="col-md-2 control-label" ><%= t(:old_price) %> </label>
                    <div class="col-md-10">
                        <%= f.text_field :old_price, class: "form-control number_input" %>
                    </div>
                </div>
            </div>
                
            <div class="tab-pane has-padding addable-form" data-sample="product-property" id="control-tab4">
              <div class="addable-container">
                <% product.product_properties.each_with_index do |property,index| %>
                  <%= render "product_property", item: property, index: index %>
                <% end %>
              </div>
              <div class="row">
                <div class="col-md-2">
                  <div class="text-left">
                    <a href="#add" class="btn btn-info addable-add"><%= t(:add_property) %> <i class="icon-plus2 position-center"></i></a>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
      <br />            
      <div class="text-right">
          <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
      </div>
    
<% end %>

