<%= form_for([naturesoft_products, :admin, category], html: {class: "form-horizontal validate"}) do |f| %>
    
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:name) %> <span class='text-danger'>*</span></label>
        <div class="col-md-10">
            <%= f.text_field :name, class: "form-control required" %>
        </div>
    </div>
        
    <div class="form-group">
        <label class="col-md-2 control-label" ><%= t(:description) %> <!--<span class='text-danger'>*</span>--></label>
        <div class="col-md-10">
            <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
        </div>
    </div>
        
    <div class="form-group">
      <label class="col-md-2 control-label" ><%= t(:parent_category) %></label>
        <div class="col-md-10">
            <%= select_tag("category[parent_id]",
              nil,
              {class: "select2-ajax",
                "data-url": select2_admin_categories_path,
                "data-excluded": category.id,
                "value": category.parent.present? ? category.parent.id : "",
                "text": category.parent.present? ? category.parent.name : ""
              }
          ) %>
        </div>
    </div>

    <div class="text-right">
        <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
    </div>
    
<% end %>