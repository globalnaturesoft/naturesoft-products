<div class="panel panel-flat">
  
  <div class="panel-body">

    <%= form_for([naturesoft_products, :admin, manufacturer], html: {class: "form-horizontal validate", multipart: true}) do |f| %>
        
        <div class="form-group">
          <label class="col-md-2 control-label" ><%= t(:image) %> <span class='text-danger'>*</span></label>
          <div class="media no-margin-top col-md-10">
            <div class="media-left">
                <%= image_tag(image_src(manufacturer.image_url.system), class: "",  "preview-for": "manufacturer[image_url]") %>
            </div>
      
            <div class="media-body">
              <input type="file" name="manufacturer[image_url]" class="file-styled previewable">
              <span class="help-block">Accepted formats: gif, png, jpg.</span>
            </div>
          </div>
        </div>
        
        <div class="form-group">
            <label class="col-md-2 control-label" ><%= t(:name) %> <span class='text-danger'>*</span></label>
            <div class="col-md-10">
                <%= f.text_field :name, class: "form-control required" %>
            </div>
        </div>
            
        <div class="form-group">
            <label class="col-md-2 control-label" ><%= t(:phone) %></label>
            <div class="col-md-10">
                <%= f.text_field :phone, class: "form-control" %>
            </div>
        </div>
        
        <div class="form-group">
            <label class="col-md-2 control-label" ><%= t(:email) %></label>
            <div class="col-md-10">
                <%= f.text_field :email, class: "form-control" %>
            </div>
        </div>
            
        <div class="form-group">
            <label class="col-md-2 control-label" ><%= t(:address) %></label>
            <div class="col-md-10">
                <%= f.text_field :address, class: "form-control" %>
            </div>
        </div>
            
        <div class="form-group">
            <label class="col-md-2 control-label" ><%= t(:description) %></label>
            <div class="col-md-10">
                <%= f.text_area :description, rows: "5", cols: "5", class: "form-control" %>
            </div>
        </div>
    
        <div class="text-right">
            <%= button_tag "#{t(:save)} <i class=\"icon-plus22 position-right\"></i>".html_safe, class: "btn btn-primary"%>
        </div>
        
    <% end %>
  </div>
</div>